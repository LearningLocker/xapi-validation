{
  "rules":{
    "class-name":true,
    "comment-format":[
      true,
      "check-space"
    ],
    "indent":[
      true,
      "spaces"
    ],
    "linebreak-style": [true, "LF"],
    "eofline": true,
    "max-classes-per-file": [true, 0],
    "max-line-length": [true, 120],
    "max-file-line-count": [true, 300],
    "no-unused-expression": true,
    "no-duplicate-variable":true,
    "no-eval":true,
    "no-internal-module":true,
    "no-trailing-whitespace":true,
    "no-var-keyword":true,
    "align": true,
    "import-spacing": true,
    "interface-over-type-literal": false,
    "object-literal-key-quotes": [true, "as-needed"],
    "object-literal-shorthand": true,
    "one-variable-per-declaration": true,
    "no-consecutive-blank-lines": true,
    "one-line":[
      true,
      "check-open-brace",
      "check-whitespace"
    ],
    "quotemark":[
      true,
      "single"
    ],
    "semicolon":[
      true,
      "always"
    ],
    "triple-equals":[
      true,
      "allow-null-check"
    ],
    "typedef-whitespace":[
      true,
      {
        "call-signature":"nospace",
        "index-signature":"nospace",
        "parameter":"nospace",
        "property-declaration":"nospace",
        "variable-declaration":"nospace"
      }
    ],
    "variable-name":{
      "items": [
        "check-format",
        "ban-keywords"
      ],
      "minLength": 3,
      "maxLength": 15
    },
    "whitespace":[
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ]
  }
}
